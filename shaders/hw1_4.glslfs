#version 130

#define M_PI 3.1415926535897932384626433832795

in vec3 vs_out_pos;

out vec3 o_color;

uniform float time;
uniform float v;
uniform float k;
uniform float max_dist;
uniform vec3 center;


void main()
{
    o_color = vec3(sin(2 * M_PI * (v * time + length(vs_out_pos - center) * k
                                              / (max_dist))));
}
