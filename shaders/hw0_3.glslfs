#version 130

in vec3 vs_out_color;

out vec3 o_color;

void main()
{
    int d = 15;
    int xpos = int(vs_out_color.x * 100) / d & 1 ^ int(vs_out_color.x < 0);
    int ypos = int(vs_out_color.y * 100) / d & 1 ^ int(vs_out_color.y < 0);

    if (xpos == ypos)
        o_color = vec3(0, 0, 0);
    else
        o_color = vec3(1, 1, 1);
}
